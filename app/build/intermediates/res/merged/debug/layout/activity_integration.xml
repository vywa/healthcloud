<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/integral_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009aa9" >

        <ImageView
            android:id="@+id/integration_tv_back"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="积分中心"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/integral_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/integral_ll" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/jifen" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/integral_ll2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/integral_fl"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/integation_tv_rule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:clickable="true"
            android:gravity="center"
            android:text="积分规则"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/integation_tv_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:clickable="true"
            android:gravity="center"
            android:text="历史记录"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/integartion_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/integral_ll2" >
    </FrameLayout>

</RelativeLayout>