<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/shape_subject_title_bg" >
    
    <TextView 
        android:id="@+id/tv_subject_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="所有问题"
        android:background="@drawable/shape_subject_title_bg_left" 
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/bg_bule"
        android:layout_weight="1"/>
    
    <TextView 
        android:id="@+id/tv_subject_best"
        android:layout_width="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="精华问题"
        android:background="@color/bg_bule"
        android:textColor="@android:color/white"
        android:layout_weight="1"/>
    
    <TextView
        android:id="@+id/tv_subject_my"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_subject_title_bg_rightblue"
        android:layout_weight="1"
        android:text="我的问题 " />

</LinearLayout>
