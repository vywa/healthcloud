<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/naire_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="为了您的健康，请做以下问卷调查"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/questionnaire_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="1.危险因素"
                android:textColor="#009aa9"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/naire_one_cb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="吸烟"
                    android:textColor="#616060"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/naire_one_cb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="糖耐量受损和/或空腹血糖受损"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_one_cb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="血脂异常"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_one_cb4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="早发心血管病家族史"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_one_cb5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="肥胖或腹型肥胖"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_one_cb6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="血同型半胱氨酸升高"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_one_cb7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="hs-CRP升高"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_one_cb8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="缺乏体力活动"
                    android:textColor="#616060" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/questionnaire_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="2.靶器官损害"
                android:textColor="#009aa9"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/naire_two_cb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="左心室肥厚"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_two_cb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="颈动脉内膜中层厚度>=0.9mm或有斑块"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_two_cb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="肱-踝动脉脉搏波速度>=14m/s"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_two_cb4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="踝/臂血压指数小于0.9"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_two_cb5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="肾小球滤过率降低或血清肌酐轻度升高"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_two_cb6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="微量白蛋白尿或白蛋白/肌酐比>=3.5mg/mmol"
                    android:textColor="#616060" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/questionnaire_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="3.伴临床疾患"
                android:textColor="#009aa9"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/questionnaire_border"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/naire_three_cb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="脑血管病"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_three_cb2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="心血管病"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_three_cb3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="肾脏疾病"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_three_cb4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="外周血管病"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_three_cb5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="视网膜病变"
                    android:textColor="#616060" />

                <CheckBox
                    android:id="@+id/naire_three_cb6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="糖尿病"
                    android:textColor="#616060" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/naire_btn_ignore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="20sp"
                android:background="@drawable/red"
                android:text="跳过" />

            <Button
                android:id="@+id/naire_btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="20sp"
                android:background="@drawable/blue"
                android:text="提交" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>