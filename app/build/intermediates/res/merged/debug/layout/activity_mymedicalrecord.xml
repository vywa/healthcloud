<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:background="#fff"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/mymedical_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009aa9" >

        <ImageView
            android:id="@+id/mymedical_imgv_back"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的病历"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_mrtitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/mymedical_back"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mymedical_tv_medicalrecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/upload_bl"
            android:gravity="center"
            android:text="病历"
            android:textColor="#616060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mymedical_tv_form"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/upload_cf"
            android:text="处方单"
            android:textColor="#616060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mymedical_tv_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/upload_jy"
            android:gravity="center"
            android:text="报告单"
            android:textColor="#616060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mymedical_tv_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/upload_qt"
            android:gravity="center"
            android:text="其他"
            android:textColor="#616060"
            android:textSize="20sp" />
    </LinearLayout>



    <ListView
        android:id="@+id/mymedical_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_mrtitle"
        android:layout_marginTop="10dp"
        android:divider="#00000000"
        android:dividerHeight="5dp" >
    </ListView>

</RelativeLayout>