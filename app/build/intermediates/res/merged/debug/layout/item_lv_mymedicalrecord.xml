<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#eef0f0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/titleview"
        android:background="@drawable/shape_subject_likebackground">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_img_mymedical_medicalrecord"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:background="#fff"
            android:padding="4dp" />

        <TextView
            android:id="@+id/item_img_mymedical_describe"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:layout_toRightOf="@+id/item_img_mymedical_medicalrecord"
            android:textColor="#616060"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/item_img_mymedical_medicalrecord"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_img_mymedical_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#ccc"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_img_mymedical_time"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="#ccc"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>