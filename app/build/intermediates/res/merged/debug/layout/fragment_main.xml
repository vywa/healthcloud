<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hykj.ForgotPwdActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/main_titlebar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/main_btns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/main_tv_condition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_main_normal"
                android:clickable="true"
                android:gravity="center"
                android:text="血糖血压"
                android:textColor="#616060"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_tv_ask"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_main_normal"
                android:clickable="true"
                android:gravity="center"
                android:text="三高随便问"
                android:textColor="#616060"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/main_tv_info"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/btn_main_normal"
                android:clickable="true"
                android:gravity="center"
                android:text="医疗资讯"
                android:textColor="#616060"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="8"
            android:orientation="vertical"
            android:paddingBottom="3dip" >

            <ImageView
                android:id="@+id/main_imgv_line"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#fff"
                android:scaleType="matrix"
                android:src="#ff0000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:background="#eef0f0" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_titlebar"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</RelativeLayout>