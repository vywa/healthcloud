<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/health_viewpager"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/health_point_group"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="#b5b7b7"
            android:orientation="horizontal"></LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/health_btn_wdbl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_blue"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/wdbl" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dddcdc" />

            <ImageButton
                android:id="@+id/health_btn_wdxy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_white"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/wdxy" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dddcdc" />

            <ImageButton
                android:id="@+id/health_btn_wdxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_blue"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/wdxt" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/health_btn_jqzb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_white"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/jkpg" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dddcdc" />

            <ImageButton
                android:id="@+id/health_btn_wdcf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_white"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/wdcf" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dddcdc" />

            <ImageButton
                android:id="@+id/health_btn_tjbg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_white"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/tjbg" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/health_btn_wdys"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_blue"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/wdys" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dddcdc" />

            <ImageButton
                android:id="@+id/health_btn_wdyd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_white"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/wdyd" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dddcdc" />

            <ImageButton
                android:id="@+id/health_btn_wdsm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_blue"
                android:clickable="true"
                android:scaleType="center"
                android:src="@drawable/wdsm" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddcdc" />
    </LinearLayout>

</LinearLayout>