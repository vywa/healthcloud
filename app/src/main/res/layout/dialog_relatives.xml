<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#c9f4f8"
        android:gravity="center"
        android:text="请输入亲人手机号码"
        android:textColor="#616060"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_dialog_relatives"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/set_relative_phone" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#535353" />

        <EditText
            android:id="@+id/dialog_edt_relatives_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="text|phone"
            android:paddingLeft="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_btn_relatives_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/red"
            android:text="确定"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            android:textColor="#ffffff" />
         <Button
            android:id="@+id/dialog_btn_relatives_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue"
            android:text="取消"
              android:textSize="18sp"
              android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>