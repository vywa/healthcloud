<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="性别"
        android:textSize="20sp"
        android:textColor="#009aa9"
        android:gravity="center"
        android:background="#616060"/>
    <TextView 
        android:id="@+id/modifysex_tv_man"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/nan2x"
        android:text="   男"
        android:textSize="18sp"
        android:clickable="true"
        android:textColor="#616060"
        android:gravity="center"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#535353"/>
    <TextView 
        android:id="@+id/modifysex_tv_woman"
        android:layout_width="wrap_content"
          android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/nv12x"
        android:text="   女"
         android:clickable="true"
        android:textSize="18sp"
        android:textColor="#616060"
        android:gravity="center"/>

</LinearLayout>
