<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#009aa9" >

        <ImageView
            android:id="@+id/uploadmedical_imgv_back"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="病历上传"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/uploadmedical_btn_save"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_bg_subjectpublish"
            android:gravity="center"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/uploadmedical_img_takephone"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="点击拍照或选取照片"
        android:textColor="#cccccc"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#cccccc" />


    <LinearLayout
        android:id="@+id/ll_mrtitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/uploadmedical_tv_medicalrecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/upload_bl"
            android:gravity="center"
            android:text="病历"
            android:textColor="#616060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uploadmedical_tv_form"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/upload_cf"
            android:text="处方单"
            android:textColor="#616060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uploadmedical_tv_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/upload_jy"
            android:gravity="center"
            android:text="报告单"
            android:textColor="#616060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uploadmedical_tv_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/upload_qt"
            android:gravity="center"
            android:text="其他"
            android:textColor="#616060"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/diet_bg"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="设置时间"
        android:textColor="#cccccc"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间"
            android:textColor="#616060"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/uploadmedical_tv_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="2"
            android:drawableRight="@drawable/jiantou2x"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:textColor="#616060"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/diet_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_marginLeft="100dp"
            android:src="@drawable/upload_blxq" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tv_dietcondition_border"
            android:gravity="center"
            android:text="病历说明"
            android:textColor="#616060"
            android:textSize="18sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/uploadmedical_edit_about"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#eef0f0"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:textColor="#009aa9"
        android:textSize="15sp" />

</LinearLayout>